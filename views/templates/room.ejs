<div class="container">

    <div class="row">
        <h1><img ng-src="/images/logo.png" alt="Logo" style="width: 250px;"/> Room {{room}}</h1>

        <div class="col-lg-12">

            <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#informations"><span
                        class="glyphicon glyphicon-info-sign"></span> <strong>Get informations</strong></button>
            <br/><br/>
        </div>

    </div>


    <div class="row">
        <div class="col-lg-12 well">
            <div class="pull-right" data-id="nbLogged">{{ logged }}</div>
            <strong>Welcome on this room.</strong>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 well">
            <div class="col-lg-6">
                <div class="input-group">
                    <input type="text" data-id="messageContent" class="form-control" ng-model="message.content" placeholder="Type some content...">
                      <span class="input-group-btn">
                        <button class="btn btn-primary" type="button" data-id="messageSend">Send!</button>
                      </span>
                </div><!-- /input-group -->

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 well" style="height: 400px;overflow: auto;">
            <div class="row" ng-repeat="message in messages | reverse" style="margin-bottom: 15px;;">
                <small>{{message.date}}</small>
                <strong>{{ message.username }}</strong>: {{ message.content }}
            </div>

        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="informations" tabindex="-1" role="dialog" aria-labelledby="informationsLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Some informations...</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Encrypted by RSA mechanism.<br/><br/>
                    </p>
                    <strong>Random passphrase:</strong><br/>
                    <div style="overflow: auto;">{{ passphrase }}</div>
                    <br/><br/>

                    <strong>Public key:</strong><br/>
                    <div style="overflow: auto;">{{ publickey }}</div>
                    <br/>

                    <strong>Room id:</strong><br/>
                    <div style="overflow: auto;"> {{ room }}</div>
                    <br/><br/>

                    <strong>Room key:</strong><br/>
                    <div style="overflow: auto;">{{ roomkey }}</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div> <!-- /container -->